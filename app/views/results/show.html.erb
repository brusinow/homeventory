
		<div class="result-name-img">
			<div class="result-img">
				<% urls = @result[0]['image_urls'] %>
				<img src="<%= urls[0] %>">
			</div>
			<div class="result-name">
				<%= "#{@result[0]['brand']} - #{@result[0]['product_name']}" %>
			</div>
				<div class="results-info">
					<%= form_tag("/items", method: "post") do %>
					  <div class="count">
					  <%= label_tag(:count, "Count:") %>
					  <%= text_field_tag(:count) %>
					  </div>
					  <%= hidden_field_tag(:name, @result[0]['product_name']) %>
					  <%= hidden_field_tag(:brand, @result[0]['brand']) %>
					  <%= hidden_field_tag(:img_url, urls[0]) %>
					  <%= hidden_field_tag(:factual_id, @result[0]['factual_id']) %>
					  <%= hidden_field_tag(:user_id, @current_user[:id]) %>
					  <div class="submit-item">
					  <%= submit_tag("Submit", class: "signup-btn btn-default btn col-xs-6 col-xs-offset-3 col-lg-4 col-lg-offset-4") %>
					  </div>
					<% end %>
				</div>
			</div>							
	</div>
</div>


