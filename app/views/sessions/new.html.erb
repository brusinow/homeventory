<div class="container">
	<div class="col-xs-12">
		<h1>Login</h1>
			
				<%= form_for :user do |f|  %>
				<div class="email">
				<%= f.text_field :email, placeholder: "Enter your email", class: "email-field" %>
				</div>
				<div class="password">
				<%= f.password_field :password, placeholder: "Enter your password", class: "pword-field" %>
				</div>
				<div class="login">
				<%= f.submit "Login", class: "btn btn-primary login-btn" %>
				</div>
				<% end %>

			<div class="facebook">
				<%= link_to "Login with Facebook", "/auth/facebook", class: "btn btn-primary fb-btn" %>
			</div>
			
		<br>
			<p class="sign-up">
				Sign up for a new account <a style="color:black;text-decoration: none;" href="/signup">here</a>.
			</p>
	</div>
</div>