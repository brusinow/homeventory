<h1>Login</h1>

<%= link_to "Login with Facebook", "/auth/facebook", class: "btn btn-primary" %>

<%= form_for :user do |f|  %>
<%= f.text_field :email, placeholder: "Enter your email" %>
<%= f.password_field :password, placeholder: "Enter your password" %>
<%= f.submit "Login" %>
<% end %>
<br>
<a style="color:black;text-decoration: none;" href="/signup">Sign up for a new account here</a>