<div class="container">
	<div class="col-xs-12">
		<div><span class="inventory-header">Inventory</span><a href="/search" class="btn btn-sq-xs btn-success">
              <i class="glyphicon glyphicon-plus"></i> Add Item to Inventory</a></div>
		<% if @items.length > 0 %>
		<% @items.each do |item| %>
	
			<div class="panel panel-default">
	  		<div class="panel-body">
	    		<img src="<%= item.img_url %>">
	    		<a href="items/<%= item.id %>"><%= item.name %></a>
		    	<button class="btn btn-default" id="add-to-list" type="submit">Add To List</button>
		    	<%= link_to "Add to Favorites", item_path(item), method: :put, class: "btn btn-default" %>
		    	<%= link_to "Delete", item_path(item), method: :delete, class: "btn btn-default" %>
		   
		  	</div>
			</div>
		<% end %>
		<% else %>
			<div class="panel panel-default">
	  		<div class="panel-body">
	  		<h3 style="color: black;">Your inventory is currently empty.</h3>
	  		</div>
			</div>
		<% end %>
	</div>
</div>





