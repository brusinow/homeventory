<div class="container">
	<div class="col-xs-12">
		<h1>Inventory</h1>
		<% @items.each do |item| %>
			<div class="panel panel-default inv-panel">
	  		<div class="panel-body">
		  			<div class="inv-img">
		    			<img src="<%= item.img_url %>">
		    		</div>
		    		<div class="inv-name">
		    			<a href="items/<%= item.id %>"><%= item.name %></a>
		    		</div>
		    		<div class="inv-buttons">
			    		<button class="btn btn-default add-to-list" type="submit">Add To List</button>
			    	<!-- <button class="btn btn-default" id="delete-item" type="submit">Delete</button> -->
					    	<%= link_to "Delete", item_path(item), method: :delete, class: "btn btn-default delete-item" %>
					    	<!-- item_path(item) translates to "/items/:id" -->
				    </div>
		  	</div>
			</div>
		<% end %>
	</div>
</div>

