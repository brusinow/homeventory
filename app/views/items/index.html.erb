<div class="container">
	<div class="col-xs-12">
		<h1>Inventory</h1>
		<% @items.each do |item| %>
			<div class="panel panel-default">
	  		<div class="panel-body inv-name">
	  			<div class="item-img">
	    			<img class="item-thumb" src="<%= item.img_url %>" width="150">
	    		</div>
	    		<div class="item-name">
	    		<a href="items/<%= item.id %>"><%= item.name %></a>
	    		</div>
		    		<div class="inv-buttons">
			    	<button class="btn btn-default" id="add-to-list" type="submit">+ List</button>
			    	<%= link_to "+ Favorites", item_path(item), method: :put, class: "btn btn-default" %>
			    	</div>
		  	</div>
			</div>
		<% end %>
	</div>
</div>





