<section id="row2">
  <div class= "col-xs-12">
    <h5>Sign Up</h5>
      <%= bootstrap_form_for :user do |f|  %>
      <%= f.text_field :email, placeholder: "Enter your email" %>
      <%= f.password_field :password, placeholder: "Create a password" %>
      <%= f.primary "Signup" %>
      <% end %>
     <% if @current_user %>
            <span style="color:black;"><%= @current_user.email %> is logged in</span>  |  
            <% end %>
              <% if @current_user %>
            <p class="text-center"><a class="nav-links" href="/logout">logout</a></p>
            <%else%>
            <a class="nav-links" href="/login">Already have an account?</a>
            <% end %>
  </div>
</section>


